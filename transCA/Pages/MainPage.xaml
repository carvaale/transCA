<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="transCA.MainPage"
             NavigationPage.HasBackButton="False">
    <NavigationPage.TitleView>
        <Label Text="TransCA" 
               HorizontalOptions="Center" 
               TextColor="White" 
               FontSize="35" 
               FontAttributes="Bold,Italic"/>
    </NavigationPage.TitleView>
    <StackLayout Orientation="Vertical" VerticalOptions="Center">
        <Button x:Name="ExistingBookingButton" Text="Existing Booking" Clicked="ExistingBookingButton_Clicked"/>
        <Button x:Name="CreateBookingButton" Text="Create Booking" Clicked="CreateBookingButton_Clicked"/>
        <Button x:Name="AddFundsButton" Text=" Add Funds" Clicked="AddFundsButton_Clicked"/>
        <Button x:Name="LogOutButton" Text="Log Out"/>

    </StackLayout>

</ContentPage>
