<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="transCA.MainPage"
             NavigationPage.HasBackButton="False"
             Style="{StaticResource contentStyle}">
    <NavigationPage.TitleView>
        <Label Text="TransCA" Style="{StaticResource bannerStyle}"/>
    </NavigationPage.TitleView>
    <StackLayout Style="{StaticResource stackStyle}">
        <Image x:Name="transCA_logo" WidthRequest="75" HeightRequest="300" Margin="0, 0, 0, 25"/>
        <Button x:Name="ExistingBookingButton" Text="Existing Booking" Clicked="ExistingBookingButton_Clicked" Style="{StaticResource buttonStyle}"/>
        <Button x:Name="CreateBookingButton" Text="Create Booking" Clicked="CreateBookingButton_Clicked" Style="{StaticResource buttonStyle}"/>
        <Button x:Name="AddFundsButton" Text=" Add Funds" Clicked="AddFundsButton_Clicked" Style="{StaticResource buttonStyle}"/>
        <Button x:Name="LogOutButton" Text="Log Out" Clicked="LogOutButton_Clicked" Style="{StaticResource buttonStyle}"/>

    </StackLayout>

</ContentPage>
