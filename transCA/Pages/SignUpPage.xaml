<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="transCA.Pages.SignUpPage"
    NavigationPage.HasNavigationBar="True"
    NavigationPage.HasBackButton="True"
    >

    <ScrollView>
        <StackLayout Padding="20" VerticalOptions="StartAndExpand">
            <Label Text="Sign Up"
            FontSize="50"
            HorizontalOptions="Center"
            />
            <Entry x:Name="UserNameEntry" Placeholder="User Name" Margin="0,20,20,20" Keyboard="Default"/>
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Margin="0,20,0,20" Keyboard="Default"/>
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" Margin="0,0,0,20" Keyboard="Default"/>
            <Button x:Name="LoginButton" Text="Sign Up" FontSize="20" Clicked="LoginButton_Clicked"/>


        </StackLayout>

    </ScrollView>
</ContentPage>
