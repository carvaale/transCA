<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="transCA.Pages.BookingConfirmedPage"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="False">
    <NavigationPage.TitleView>
        <Label Text="Confirmation" Style="{StaticResource bannerStyle}"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Style="{StaticResource stackStyle}">
            <Label x:Name="Confirm"  Text="" FontSize="Body" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="60, 0"/>
            <Image x:Name="TicketQR" WidthRequest="75" HeightRequest="300"/>
            <Label Text="Thank you for using TransCA." HorizontalTextAlignment="Center" FontSize="20" FontAttributes="Bold,Italic" Margin="30, 0"/>
            <Button Text="Return to Home Page" Clicked="Home_Clicked" Style="{StaticResource buttonStyle}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>